{
  "name": "meTokens-core",
  "version": "1.0.0",
  "description": "meTokens core smart contract protocol ",
  "homepage": "https://meTokens.eth",
  "keywords": [
    "erc20",
    "ethereum",
    "defi",
    "dao",
    "decentralization",
    "token",
    "bonding curve"
  ],
  "author": "meTokens DAO",
  "license": "Apache-2.0",
  "scripts": {
    "compileCI": "TS_NODE_TRANSPILE_ONLY=1 yarn hardhat compile",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "lint:sol": "solhint  -f table 'contracts/**/*.sol' --fix ",
    "lint:prettier": "prettier --ignore-path .gitignore --write \"{*,**/*}.{ts,js,json,md,sol}\"",
    "lint": "yarn lint:prettier  && yarn run lint:sol",
    "deploy-local": "hardhat run scripts/deploy.ts --network hardhat",
    "deploy-rinkeby": "hardhat run scripts/deploy.ts --network rinkeby",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{json,yml,yaml,md,ts,js,sol}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@uniswap/sdk-core": "^3.0.1",
    "@uniswap/v3-core": "^1.0.0",
    "@uniswap/smart-order-router": "^2.5.22",
    "@uniswap/v3-periphery": "^1.4.1",
    "@uniswap/v3-sdk": "^3.8.1",
    "yarn": "^1.22.18"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/big.js": "^6.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.26",
    "chai": "^4.3.4",
    "decimal.js": "^10.3.1",
    "dotenv": "^16.0.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.4",
    "fs": "^0.0.1-security",
    "hardhat": "^2.9.3",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-deploy": "^0.11.4",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "lint-staged": "^11.1.2",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3"
  }
}
